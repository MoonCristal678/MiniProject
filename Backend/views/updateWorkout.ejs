<!-- updateWorkout.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Workout</title>
</head>
<body>
  <h1>Update Workout</h1>

  <form action="/v1/api/updateWorkout" method="post">
    <label for="workoutId">Select Workout ID:</label>
    <select id="workoutId" name="workoutId" required>
      <!-- Populate the dropdown options dynamically from the server -->
      <% workouts.forEach(workout => { %>
        <option value="<%= workout._id %>"><%= workout.name %> - <%= workout._id %></option>
      <% }); %>
    </select>
    
    <label for="name">New Workout Name:</label>
    <input type="text" id="name" name="name" required>

    <label for="duration">New Duration:</label>
    <input type="number" id="duration" name="duration" required>

    <label for="intensity">New Intensity:</label>
    <input type="text" id="intensity" name="intensity" required>

    <!-- Add other fields as needed -->

    <button type="submit">Update Workout</button>
  </form>

  <!-- Add any additional content or styling as needed -->
</body>
</html>
