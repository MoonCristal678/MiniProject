<!-- updateGoal.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Goal</title>
</head>
<body>
  <h1>Update Goal</h1>

  <form action="/v1/api/updateGoal" method="post">
    <label for="goalId">Select Goal ID:</label>
    <select id="goalId" name="goalId" required>
      <!-- Populate the dropdown options dynamically from the server -->
      <% goals.forEach(goal => { %>
        <option value="<%= goal._id %>"><%= goal.name %> - <%= goal._id %></option>
      <% }); %>
    </select>
    
    <label for="name">New Goal Name:</label>
    <input type="text" id="name" name="name" required>

    <label for="target">New Target:</label>
    <input type="number" id="target" name="target" required>

    <!-- Add other fields as needed -->

    <button type="submit">Update Goal</button>
  </form>

  <!-- Add any additional content or styling as needed -->
</body>
</html>
