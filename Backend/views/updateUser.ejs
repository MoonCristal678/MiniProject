<!-- updateUser.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update User</title>
</head>
<body>
    <h1>Update User</h1>
    <form action="/v1/updateUser" method="POST">
        <!-- Add a dropdown menu for selecting a user -->
        <label for="userId">Select User:</label>
        <select name="userId" id="userId" required>
            <% users.forEach(user => { %>
                <option value="<%= user._id %>"><%= user.name %> (ID: <%= user._id %>)</option>
            <% }); %>
        </select>
        <br>

        <label for="name">Name:</label>
        <input type="text" name="name" required>
        <br>

        <label for="age">Age:</label>
        <input type="number" name="age" required>
        <br>

        <label for="bloodType">Blood Type:</label>
        <input type="text" name="bloodType" required>
        <br>

        <label for="birthdate">Birthdate:</label>
        <input type="date" name="birthdate" required>
        <br>

        <label for="countryOfBirth">Country of Birth:</label>
        <input type="text" name="countryOfBirth" required>
        <br>

        <button type="submit">Update User</button>
    </form>
</body>
</html>
