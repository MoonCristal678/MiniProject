<!-- updateFile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update File</title>
</head>
<body>
  <h1>Update File</h1>
  <form action="/v1/updateFile" method="post">
    <label for="fileId">Select File:</label>
    <select name="fileId" id="fileId">
      <% files.forEach(file => { %>
        <option value="<%= file._id %>"><%= file.name %> (ID: <%= file._id %>)</option>
      <% }); %>
    </select>
    <br>
    <label for="name">New File Name:</label>
    <input type="text" name="name" required>
    <br>
    <label for="content">New File Content:</label>
    <textarea name="content" required></textarea>
    <br>
    <button type="submit">Update File</button>
  </form>
</body>
</html>
